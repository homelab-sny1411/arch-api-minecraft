# API Configuration
API_PORT=1411
NODE_ENV=development

# Minecraft Server Configuration
MINECRAFT_SERVICE_NAME=minecraft-server
MINECRAFT_PORT=25565
MINECRAFT_RCON_PORT=25575
MINECRAFT_RCON_PASSWORD=your_rcon_password_here
